@model MovieGallery.Models.Movie

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = Model.Title + " Movie Detail";
	ViewBag.ShowBackBar = true;
}

<h2>@Model.Title</h2>

<div class="row">
	<div class="col-md-6">
		<div class="well">
			<h5><label>Release Date:</label> @Model.ReleaseDateDisplay</h5>
			<h5><label>Favorite:</label> @(Model.Favorite ? "Yes" : "No")</h5>
			@if (Model.Actors.Length > 0)
			{
				<h5>Actors:</h5>
				<div>
					<ul>
						@foreach (var actor in Model.Actors)
						{
							<li>@actor.Name: @actor.Role</li>
						}
					</ul>
				</div>
			}
		</div>
		<h5>Description:</h5>
		<div>@Html.Raw(Model.DescriptionHtml)</div>
	</div>
	<div class="col-md-6">
		<img src="/Images/@Model.CoverImageFileName"
			 alt="The Dark Knight" class="img-responsive" style="max-height: 700px;" />
	</div>
</div>